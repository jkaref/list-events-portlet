<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>list-events-portlet</portlet-name>
		<display-name>list-events-portlet</display-name>
		<portlet-class>com.jkaref.viadrina.portlet.EventListPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/event-list/view.jsp</value>
		</init-param>
        <init-param>
            <name>edit-template</name>
            <value>/html/event-list/edit.jsp</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
		</supports>
        <supported-locale>en_US</supported-locale>
        <supported-locale>de_DE</supported-locale>
        <resource-bundle>languages.Language</resource-bundle>
		<portlet-info>
			<title>list-events-portlet</title>
			<short-title>list-events-portlet</short-title>
			<keywords>list-events-portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>